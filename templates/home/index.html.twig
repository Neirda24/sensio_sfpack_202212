{% extends 'base.html.twig' %}

{% block title 'Movies' %}

{% block body %}
    <main>
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Add a movie</h1>
                    <p class="lead text-muted">Not finding the movie you'd like ? Just add it !</p>
                    <p>
                        <a href="{{ path('movie_add') }}" class="btn btn-primary my-2">Create a new movie</a>
                    </p>
                </div>
            </div>
        </section>
        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for movie in movies %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <p class="card-text">
                                    <a href="{{ path('movie_edit', {'slug': movie.slug}) }}" target="_blank"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('movie_delete', {'slug': movie.slug}) }}"><i class="fa fa-trash"></i></a>
                                    {{ movie.title }}
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">{{ movie.genres|join(', ') }}</small>
                                    <small class="text-muted">{{ movie.releasedAt|date('Y') }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </main>
{% endblock %}
